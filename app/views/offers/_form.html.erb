<%= form_with(model: offer) do |form| %>
  <div class="form-group">
    <%= form.label :what, class: "form-label" %>
    <%= form.text_field :what, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :where, class: "form-label" %>
    <%= form.text_field :where, class: "form-control" %>
  </div>

  <div class="form-group form-group-with-border">
    <div class="form-group">
      <%= form.label :when_start, class: "form-label" %>
      <%= form.datetime_field :when_start, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :when_end, class: "form-label" %>
      <%= form.datetime_field :when_end, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :when_text, class: "form-label" %>
      <%= form.text_field :when_text, class: "form-control" %>
    </div>

    <% if offer.errors[:offer_time].any? %>
      <%= render "shared/error", error: offer.errors[:offer_time].to_sentence %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :conditions, class: "form-label" %>
    <%= form.rich_text_area :conditions %>
  </div>

  <%= form.submit nil, class: "btn btn-primary" %>
<% end %>
