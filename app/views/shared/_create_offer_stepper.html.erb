<ol class="card py-3 flex mb-3">
  <li class="flex items-center <%= "text-blue-600" if new_offer_page? || edit_offer_page? %>">
    <span class="flex items-center justify-center w-5 h-5 me-2 text-xs border rounded-full shrink-0 <%= offer_bulk_add_invitations_page? ? "border-gray-500" : "border-blue-600" %>">
      1
    </span>
    <% if local_assigns[:offer] %>
      <%= link_to t(".edit_offer"),
                  edit_offer_path(offer),
                  class: "text-inherit" %>
    <% else %>
      <%= t(".create_offer") %>
    <% end %>
    <svg class="w-3 h-3 mx-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 10">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
    </svg>
  </li>
  <li class="flex items-center <%= "text-blue-600" if offer_bulk_add_invitations_page? %>">
    <span class="flex items-center justify-center w-5 h-5 me-2 text-xs border rounded-full shrink-0 <%= offer_bulk_add_invitations_page? ? "border-blue-600" : "border-gray-500" %>">
      2
    </span>
    <% if local_assigns[:offer] %>
      <%= link_to t(".invite_friends"),
                  offer_bulk_add_invitations_path(offer),
                  class: "text-inherit" %>
    <% else %>
      <%= t(".invite_friends") %>
    <% end %>
  </li>
</ol>
