<div class="fixed bottom-0 right-0 left-0">
  <div class="container px-3 m-auto">
    <div class="px-4 py-2 flex justify-between items-center bg-gray-50 border-t border-r border-l border-gray-300 rounded-tr-2xl rounded-tl-2xl">
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path,
                      method: :delete,
                      class: "text-red-500",
                      data: { turbo: false } do %>
          <%= link_to t(".sign_out") %>
        <% end %>
      <% end %>
      <%= link_to t(".new_offer"),
                  new_offer_path,
                  class: "btn btn-success" %>
      <%= link_to t(".home"),
                  root_path %>
    </div>
  </div>
</div>
