<div class="bottom-nav fixed grid grid-cols-3 z-30 w-full h-16 max-w-md bg-indigo-100 border border-indigo-200 rounded-full bottom-4 dark:bg-gray-700 dark:border-indigo-600">
  <%= link_to root_path,
              class: "inline-flex flex-col items-center justify-center px-5 rounded-s-full hover:bg-gray-50 dark:hover:bg-gray-800 group" do %>
    <i class="fa-solid fa-house w-5 h-5 text-gray-500 dark:text-gray-400 group-hover:text-indigo-600 dark:group-hover:text-indigo-500"></i>
  <% end %>
  <div class="flex items-center justify-center">
    <%= link_to new_event_path,
                class: "inline-flex items-center justify-center w-10 h-10 font-medium bg-indigo-600 rounded-full hover:bg-indigo-700 group focus:ring-4 focus:ring-indigo-300 focus:outline-none dark:focus:ring-indigo-800 #{ 'pointer-events-none' if new_event_page? }" do %>
      <svg class="w-4 h-4 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16"/>
      </svg>
    <% end %>
  </div>
  <%= link_to sidebar_path,
              class: "inline-flex flex-col items-center justify-center px-5 rounded-e-full hover:bg-gray-50 dark:hover:bg-gray-800 group",
              data: {
                turbo_frame: "drawer-content",
                action: "drawer#open",
                drawer_size_param: "xs"
              } do %>
    <i class="fa-solid fa-bars w-5 h-5 text-gray-500 dark:text-gray-400 group-hover:text-indigo-600 dark:group-hover:text-indigo-500"></i>
  <% end %>
</div>
